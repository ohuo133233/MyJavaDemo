<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/contact_list_name_icon_bg"
        android:gravity="center"
        android:textColor="#FF5C5EE6"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="名字" />


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/text_chat"
        app:layout_constraintEnd_toEndOf="@+id/text_chat"
        app:layout_constraintStart_toStartOf="@+id/text_chat"
        app:layout_constraintTop_toTopOf="@+id/text_chat" />

    <TextView
        android:id="@+id/text_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColor="#D9000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/name_icon"
        app:layout_constraintEnd_toStartOf="@+id/name_icon"
        app:layout_constraintTop_toTopOf="@+id/name_icon"
        tools:text="演示的文本，实际看不到" />
</androidx.constraintlayout.widget.ConstraintLayout>