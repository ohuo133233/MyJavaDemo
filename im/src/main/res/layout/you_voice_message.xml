<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/contact_list_name_icon_bg"
        android:gravity="center"
        android:textColor="#FF5C5EE6"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="名字" />


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/voice"
        app:layout_constraintEnd_toEndOf="@+id/voice"
        app:layout_constraintStart_toStartOf="@+id/voice"
        app:layout_constraintTop_toTopOf="@+id/voice" />

    <ImageView
        android:id="@+id/voice"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name_icon"
        app:layout_constraintTop_toTopOf="@+id/name_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>