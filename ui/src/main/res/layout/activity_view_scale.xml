<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ViewScaleActivity">

    <TextView
        android:id="@+id/from_x_scale_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fromXScale:"
        app:layout_constraintBottom_toBottomOf="@+id/from_x_scale_editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/from_x_scale_editText" />

    <EditText
        android:id="@+id/from_x_scale_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/from_x_scale_text_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/to_x_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="to_x_scale:"
        app:layout_constraintBottom_toBottomOf="@+id/from_x_scale_editText"
        app:layout_constraintStart_toEndOf="@+id/from_x_scale_editText"
        app:layout_constraintTop_toTopOf="@+id/from_x_scale_editText" />

    <EditText
        android:id="@+id/to_x_scale_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/to_x_scale"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/from_y_scale_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fromYScale:"
        app:layout_constraintBottom_toBottomOf="@+id/from_y_scale_editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/from_y_scale_editText" />

    <EditText
        android:id="@+id/from_y_scale_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/from_y_scale_text_view"
        app:layout_constraintTop_toBottomOf="@+id/from_x_scale_editText" />

    <TextView
        android:id="@+id/to_y_scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="to_Y_scale:"
        app:layout_constraintBottom_toBottomOf="@+id/from_y_scale_editText"
        app:layout_constraintStart_toEndOf="@+id/from_y_scale_editText"
        app:layout_constraintTop_toTopOf="@+id/from_y_scale_editText" />

    <EditText
        android:id="@+id/to_y_scale_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/from_y_scale_editText"
        app:layout_constraintStart_toEndOf="@+id/to_y_scale"
        app:layout_constraintTop_toTopOf="@+id/from_y_scale_editText" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="缩放X轴模式"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_y_scale_editText" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/spinner1"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="演示文字"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="持续时间："
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>